<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.adevelca.calculadora"
        versionCode = "10"
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Calculadora</name>

    <description>
        Calculadora de presupuestos para freelancers
    </description>

    <author href="http://adevelca.com" email="info@adevelca.com">
        Angel Alvizu
    </author>

    <platform name="ios">
        <icon src="icon.png" width="180" height="180" />
    </platform>

    <platform name="android">
        <icon src="icon.png" width="180" height="180" />

        <icon src="splash.png" platform="android" qualifier="ldpi" />
        <icon src="splash.png" platform="android" qualifier="mdpi" />
        <icon src="splash.png" platform="android" qualifier="hdpi" />
        <icon src="splash.png" platform="android" qualifier="xhdpi" />
        <icon src="splash.png" platform="android" qualifier="xxhdpi" />
        <icon src="splash.png" platform="android" qualifier="fr-xxhdpi" />
    </platform>

    <platform name="winphone">
        <icon src="icon.png" width="180" height="180" />
    </platform>

</widget>